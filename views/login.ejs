<%- include('partials/header') %>

    <div class="w-full h-[91.5vh] flex justify-center items-center px-4">
        <div class="bg-white/40 backdrop-blur-sm rounded-xl w-full sm:w-3/4 md:w-1/2 lg:w-1/3 p-6">
            <div class="text-center mb-6">
                <h1 class="text-4xl font-extrabold text-gray-800">Login User</h1>
            </div>

            <form class="text-center" action="/login-user" method="post">
                <input
                    class="w-full sm:w-3/4 mb-6 p-3 rounded-xl text-xl text-gray-700 border border-transparent focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-100"
                    type="text" placeholder="Enter username" name="username">

                <input
                    class="w-full sm:w-3/4 mb-6 p-3 rounded-xl text-xl text-gray-700 border border-transparent focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-100"
                    type="password" name="password" placeholder="Password">

                <button
                    class="w-full sm:w-3/4 py-3 px-5 bg-green-500 text-gray-700 rounded-xl hover:bg-green-600 transition-colors duration-200">
                    Login
                </button>
            </form>

            <div class="text-center mt-6">
                <p class="text-gray-700">
                    Don't have an account? <a class="text-green-400 hover:text-green-500 transition-colors duration-200"
                        href="/register">Register</a>
                </p>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>