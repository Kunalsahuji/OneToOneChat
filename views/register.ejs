<%- include('partials/header') %>

    <div class="w-full h-[90vh] flex justify-center items-center px-4">
        <div class="bg-white/40 backdrop-blur-sm rounded-xl w-full sm:w-3/4 md:w-1/2 lg:w-1/3 p-6">
            <div class="text-center mb-6">
                <h1 class="text-4xl font-extrabold text-gray-800">Register User</h1>
            </div>

            <form class="text-center" action="/register-user" method="post" enctype="multipart/form-data">

                <input
                    class="w-full sm:w-3/4 mb-6 p-3 rounded-xl text-xl text-gray-900 border border-transparent focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-150"
                    type="text" name="name" placeholder="Full Name">

                <input
                    class="w-full sm:w-3/4 mb-6 p-3 rounded-xl text-xl text-gray-900 border border-transparent focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-150"
                    type="text" name="username" placeholder="Username">

                <input
                    class="w-full sm:w-3/4 mb-6 p-3 rounded-xl text-xl text-gray-900 border border-transparent focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-150"
                    type="email" name="email" placeholder="Email">

                <input
                    class="w-full sm:w-3/4 mb-6 p-3 rounded-xl text-xl text-gray-900 border border-transparent focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-100"
                    type="file" name="profileImage" placeholder="Profile Image">

                <input
                    class="w-full sm:w-3/4 mb-6 p-3 rounded-xl text-xl text-gray-900 border border-transparent focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-150"
                    type="password" name="password" placeholder="Password">


                <button
                    class="w-full sm:w-3/4 py-3 px-5 bg-green-500 text-gray-900 rounded-xl hover:bg-green-600 transition-colors duration-200">
                    Register
                </button>
            </form>

            <div class="text-center mt-6">
                <p class="text-gray-900">
                    Already have an account? <a
                        class="text-green-400 hover:text-green-500 transition-colors duration-200"
                        href="/login">Login</a>
                </p>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>