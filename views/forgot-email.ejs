<%- include('partials/header') %>

<div class="w-full h-[90vh] flex justify-center items-center px-4">
    <div class="bg-white/40 backdrop-blur-sm rounded-xl w-full sm:w-3/4 md:w-1/2 lg:w-1/3 p-6">
        <div class="text-center mb-6">
            <h1 class="text-4xl font-extrabold text-gray-800">Forgot Your Password?</h1>
            <p class="text-gray-700 mt-2">Enter your email address and we'll send you a link to reset your password.</p>
        </div>

        <form class="text-center" action="/forgot-email" method="POST">
            <input 
                class="w-full sm:w-3/4 mb-6 p-3 rounded-xl text-xl text-gray-900 border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-100" 
                type="email" 
                name="forgotEmail"
                id="forgotEmail" 
                placeholder="Enter your email address" 
                required>

            <button 
                class="w-full sm:w-3/4 py-3 px-5 bg-green-500 text-white rounded-xl hover:bg-green-600 transition-colors duration-200">
                Send Reset Link
            </button>
        </form>

        <div class="text-center mt-6">
            <p class="text-gray-800">
                Remembered your password? <a 
                    class="text-green-500 hover:text-green-600 transition-colors duration-200" 
                    href="/login">Login</a>
            </p>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
