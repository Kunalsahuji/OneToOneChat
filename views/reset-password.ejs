<%- include('partials/header') %>
<div class="w-[50%] m-auto bg-gray-100 p-8 rounded-lg">
    <h1 class="text-3xl text-center text-purple-600">Reset Password</h1>
    <form action="/reset-password/<%= token %>" method="post">
        <input type="password" name="password" class="w-full p-3 mt-4 border rounded-md" placeholder="Enter new password" required>
        <button class="w-full mt-4 bg-purple-500 text-white py-2 rounded-md">Reset Password</button>
    </form>
</div>
